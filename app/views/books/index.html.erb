<h1 class = "Books">
  <strong>Books</strong>
</h1>

  <table>
     <thead>
           <tr>
           <th>title</th>
           <th>body</th>
           <th></th>
           </tr>
     </thead>

     <tbody>
     <% @books.each do |book| %>
           <tr>
           <td>
           <%= book.title %>
           </td>
           <td>
           <%= book.body %>
           </td>
           <td>
           <%= link_to "Show", book_path(book) %>
           <%= link_to "Edit", edit_book_path(book) %>
           <%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
           </td>
           </tr>
     <% end %>
     </tbody>
  </table>

<h2>
  <strong>New book</strong>
</h2>





<%= form_for(@book) do |f| %>

    <h4> Title</h4>
    <%= f.text_field :title %>

    <h4> Body</h4>
    <%= f.text_area :body %>

    <div><%= f.submit 'Create Book' %></div>

<% end %>